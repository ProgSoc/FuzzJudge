{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"resolveJsonModule": true,
		"allowJs": true,
		"checkJs": true,
		"isolatedModules": true,
		"moduleDetection": "force",
		"outDir": "./node_modules/.tmp/app"
	},
	"include": ["src/**/*.ts", "src/**/*.js", "src/**/*.svelte"]
}
