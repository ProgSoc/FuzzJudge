{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": ["config:recommended", "customManagers:biomeVersions"],
	"lockFileMaintenance": {
		"enabled": true
	},
	"packageRules": [
		{
			"matchUpdateTypes": ["minor", "patch"],
			"matchCurrentVersion": "!/^0/",
			"automerge": true
		}
	],
	"rangeStrategy": "pin",
	"addLabels": ["renovate"],
	"ignorePaths": ["./clients/fj-tui"]
}
