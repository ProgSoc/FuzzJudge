{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": true,
		"ignore": [
			"./clients/fj-svelte/dist",
			"./node_modules",
			"./server/dist",
			"./server/**/*.generated.ts",
			"./clients/fj-svelte/src/gql/index.ts",
			"./clients/fj-admin-html/src/gql/index.ts",
			"./clients/fj-react/src/routeTree.gen.ts",
			"./clients/fj-react/dist",
			"./clients/fj-react/src/gql/index.ts"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"overrides": [
		{
			"include": ["./server/**/*.ts"],
			"linter": {
				"rules": {
					"correctness": {
						"noUnusedImports": "error"
					}
				}
			}
		},
		{
			"include": ["**/*.svelte"],
			"linter": {
				"rules": {
					"style": {
						"useConst": "off"
					}
				}
			}
		},
		{
			"include": ["./clients/fj-admin-html/src/**/*.ts"],
			"linter": {
				"rules": {
					"style": {
						"noNonNullAssertion": "off"
					}
				}
			}
		}
	]
}
